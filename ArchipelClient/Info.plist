<plist version="1.0">
<dict>
    <key>CPBundleIdentifier</key>
    <string>org.archipelproject.archipel</string>
    <key>Main cib file base name</key>
    <string>MainMenu.cib</string>
    <key>CPBundleName</key>
    <string>Archipel</string>
    <key>CPPrincipalClass</key>
    <string>CPApplication</string>
    <key>CFBundleIconFile</key>
    <string>icon.icns</string>


    <key>TNArchipelBOSHService</key>
    <string>http://CHANGE-ME-IN-THE-INFO.PLIST:5280/http-bind</string>

    <key>TNArchipelBOSHResource</key>
    <string>ArchipelController</string>


    <!--
        URL of crash reporting.
        See LPCrashReporter from LPKit to see how it works if you want to
        use your own crash reporter
    -->
    <key>LPCrashReporterLoggingURL</key>
    <string>http://antoinemercadal.fr/archipelCrashReporting/reports.php</string>

    <!--
        Url of the welcome page. It can be any URL (online) or "local" to
        display the defaut welcome page (offline)
    -->
    <key>TNArchipelHelpWindowURL</key>
    <string>http://antoinemercadal.fr/archipelhelp2/</string>

    <!--
        Time in second before starting to load modules when roster selection changes
        this avoid to spam XMPP server
    -->
    <key>TNArchipelModuleLoadingDelay</key>
    <real>0.15</real>

    <!--
        Use animations
    -->
    <key>TNArchipelUseAnimations</key>
    <integer>1</integer>

    <!--
        if TNArchipelUseAnimations is 1, set the animation duration
    -->
    <key>TNArchipelAnimationsDuration</key>
    <real>0.3</real>

    <!--
        Copyright message
    -->
    <key>TNArchipelCopyright</key>
    <string>Copyright (c) 2010 Antoine Mercadal</string>

    <!--
        Displayed version of Archipel Client
    -->
    <key>TNArchipelVersion</key>
    <string>Archipel Beta 1 (Saturn)</string>

    <!--
        Default log level. Using trace or debug can slow down the application
         - trace
         - debug
         - info
         - warn
         - error
         - fatal
    -->
    <key>TNArchipelConsoleDebugLevel</key>
    <string>warn</string>

    <!--
        This account is considered as the admin account of the platform.
        Note that it is easily hackable and users can eventually make them admin and will be
        able to display the reserved GUI parts. but it doesn't matter as in the server side
        all of them commands will be rejected.
    -->
    <key>ArchipelDefaultAdminAccount</key>
    <string>admin@CHANGE-ME-IN-THE-INFO.PLIST</string>
</dict>
</plist>
